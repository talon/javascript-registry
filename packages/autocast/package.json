{
  "name": "@talon/autocast",
  "version": "1.0.1",
  "description": "absurd podcast scripting",
  "homepage": "https://github.com/talon/javascript-registry/packages/autocast#readme",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write README.md **/*",
    "test": "jest",
    "build": "rm -rf dist && babel --extensions '.js,.md' lib --ignore '**/*.test.js' -d dist",
    "script": "npm run build && node dist/index.js",
    "watch": "nodemon --exec babel-node lib/index.js",
    "prepublishOnly": "npm run test && npm run build",
    "publish": "git push"
  },
  "keywords": [
    "markov",
    "podcast"
  ],
  "author": "Talon Poole",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "babel-plugin-literate",
        {
          "files": "\\.md$"
        }
      ]
    ]
  },
  "dependencies": {
    "highland": "^2.13.5",
    "lodash": "^4.17.15",
    "markov": "0.0.7",
    "say": "^0.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babel-plugin-literate": "talon/babel-plugin-literate#feature/configuration",
    "jest": "^24.9.0",
    "prettier": "^1.19.1"
  },
  "gitHead": "1fa7f09f82366ee26fedbc47581ca02678c674ee"
}
