{
  "name": "@talon/scripts",
  "version": "1.0.0",
  "description": "useful scripts",
  "main": "index.js",
  "scripts": {
    "task": "gulp",
    "test": "jest"
  },
  "keywords": [
    "scripts",
    "util"
  ],
  "author": "Talon Poole",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "babel-plugin-literate": "talon/babel-plugin-literate#feature/configuration",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-jest": "^4.0.3",
    "gulp-prettier": "^2.3.0",
    "gulp-typedoc": "^2.2.3",
    "jest-cli": "^24.9.0",
    "typedoc": "^0.15.3",
    "typedoc-plugin-markdown": "^2.2.11"
  },
  "devDependencies": {
    "@babel/register": "^7.7.4"
  },
  "prettier": {
    "semi": false
  },
  "jest": {
    "moduleFileExtensions": [
      "md",
      "js",
      "ts",
      "jsx",
      "tsx"
    ],
    "testRegex": "(README|\\.(test|usage))\\.([jt]sx?|md)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/api/"
    ],
    "transform": {
      "^.+\\.([jt]sx?|md)$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "babel-plugin-literate",
      "@babel/plugin-proposal-export-namespace-from"
    ]
  }
}
