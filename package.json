{
  "name": "root",
  "private": true,
  "scripts": {
    "format": "lerna run format",
    "docs": "lerna run docs",
    "test": "lerna run test",
    "build": "lerna run build",
    "publish": "lerna publish --registry=https://npm.pkg.github.com && git push",
    "new": "babel-node ./scripts/new"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/talon/javascript-registry.git"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run docs && git add packages/**/README.md && pretty-quick --staged",
      "pre-push": "npm run test"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "documentation": "^12.1.3",
    "husky": "^3.0.9",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "prompts": "^2.3.0",
    "semantic-release": "^15.13.30"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
