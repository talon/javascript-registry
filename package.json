{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/talon/javascript-registry.git"
  },
  "scripts": {
    "test": "lerna exec -- gulp test",
    "build": "yarn install && lerna exec -- gulp build",
    "release": "./node_modules/lerna-semantic-release/packages/lerna-semantic-release/bin/lerna-semantice-release.js",
    "ci": "npm run release pre && npm run release perform"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.7",
    "@semantic-release/git": "^7.0.18",
    "babel-jest": "^24.9.0",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "gulp": "^4.0.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.20.1",
    "lerna-semantic-release": "ZachCase/lerna-semantic-release#caribou",
    "prettier": "^1.19.1"
  }
}
